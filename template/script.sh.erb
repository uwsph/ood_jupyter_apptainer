#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

#
# Start Jupyter Notebook Server
#

# Launch the Jupyter Notebook Server
set -x

BINDS=/home,/projects

apptainer run --no-home -B "$BINDS" \
  --env "PATH=/opt/conda/bin:${PATH}" \
  "${JUPYTER_IMAGE}" \
  jupyter notebook \
  --config="${CONFIG_FILE}"
